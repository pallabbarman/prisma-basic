{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "modules/*": ["modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
